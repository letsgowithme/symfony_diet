{% extends 'base.html.twig' %}
{% block title %}
	Patient
	{{ user.fullName }}
{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
	<div class="container">
		<h1>Patient</h1>
		
	<h5 class="mt-3 text-dark">Nom/Prénom :
			<span class=" bg-primary mt-1">{{ user.fullName }}</span>
		</h5>

		<h5 class="mt-3 text-dark">Email
			<span class="bg-primary mt-1">{{ user.email }}</span>
		</h5>

		<h5 class="mt-3 text-dark">Allergènes :</h5>
			{% for allergen in user.allergens %}
				<span class="bg-primary mb-4 fs-6">{{ allergen.name|raw }}</span>	
		{% endfor %}

		<h5 class="mt-3 text-dark">Régime :</h5>
		
		{% for diets in user.diets %}
			<span class="bg-primary mb-4 fs-6">{{ diets.name }}</span>
		{% endfor %}
        <h5 class="mt-3 text-dark">Recipes :</h5>
			{% for recipe in user.recipes %}
				<span class="badge bg-primary mb-4 fs-6">{{ recipe.name|raw }}</span>	
		{% endfor %}
		
		
				<div class="text-center">
				<button class="btn btn-primary" href="{{ path('user.index') }}">{{ button_label|default('Vers la liste de patients') }}</button>
						</div>
			</div>
		</div>
		</div>
		
	</div>
	
</div>




{% endblock %}
