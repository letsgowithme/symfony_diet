{% extends 'base.html.twig' %}

{% block title %}Liste de patients
{% endblock %}

{% block body %}
	<divListeCréerNom/Prénom</th class="container mt-4" <h1> de patients</h1> <a href="{{ path('user.new') }}"> un nouveau patient</a> <table class="table"> <thead> <tr> <th>>
		<th>Email</th>
		<th>Date de naissance</th>
		<th>Créé</th>
		<th>Voir</th>
		<th>Modifier</th>
	</tr>
</thead>
<tbody>
	{% for user in users %}
		<tr>
			<td>{{ user.fullName }}</td>
			<td>{{ user.email }}</td>
			<td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
			<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			<td>
				<button type="button" class="btn btn-danger">
					<a href="{{ path('user.show', {'id': user.id}) }}">Voir</a>
				</button>
			</td>
			<td>
				<button type="button" class="btn btn-danger">
					<a href="{{ path('user.edit', {'id': user.id}) }}">Modifier</a>
				</button>
			</td>
		</tr>
	{% else %}
		<tr>
			<td colspan="8">Pas de données</td>
		</tr>
	{% endfor %}
</tbody></table></div>{% endblock %}
