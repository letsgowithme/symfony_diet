{% extends 'base.html.twig' %}
{% block title %}
	Créer un patient
{% endblock %}
{% block body %}
	<div class="container">

		<h1 class="mt-4">Créer un patient</h1>

		{{ form_start(form) }}

		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.fullName) }}
			{{ form_widget(form.fullName) }}
			<div class="form-error">
				{{ form_errors(form.fullName) }}
			</div>
		</div>
		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem; margin-bottom: 1.3em;">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="form-error">
				{{ form_errors(form.email) }}
			</div>
		</div>
		<br>
		<div class="form-group mb-4" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.allergens) }}
			<br>
			<br>
			<div class="choiceList-wrapper" style="color: rgb(85, 85, 93);">
				{% for field in form.allergens %}
					<div style="min-width: 15%;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>
		<hr>
		<div class="form-group mb-3" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.diets) }}
			<br>
			<br>
			<div class="choiceList-wrapper" style="color: rgb(85, 85, 93);">
				{% for field in form.diets %}
					<div style="min-width: 15%;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>
		<hr>
		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.recipes) }}
			<br>
			<br>
			<div class="choiceList-wrapper" style="color: rgb(85, 85, 93);">
				{% for field in form.recipes %}
					<div style="min-width: 15%;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>
		<hr>
		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.dateOfBirth) }}
			{{ form_widget(form.dateOfBirth) }}
			<div class="form-error">
				{{ form_errors(form.dateOfBirth) }}
			</div>
		</div>
		<br>
		<hr>
		{# <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
					{{ form_label(form.createdAt) }}
					{{ form_widget(form.createdAt) }}
					<div class="form-error">
						{{ form_errors(form.createdAt) }}
					</div>
				</div> #}
		<br>
		<hr>
		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.roles) }}
			{{ form_widget(form.roles) }}
			<div class="form-error">
				{{ form_errors(form.roles) }}
			</div>
		</div>
		<hr>
		
		<div class="form-group mb-4" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			<div class="form-error">
				{{ form_errors(form.plainPassword) }}
			</div>
		</div>
		<button type="button" class="btn btn-primary my-4">

		<a href="https://www.motdepasse.xyz/" class="fs-5 text-light mb-4 text-decoration-none" target="_blank" >Générer le mot de passe</a>
		</button>
  
		<div class="form-group" style="font-size: 1.6rem;">
			{{ form_row(form.submit) }}
		</div>
		
		<div class="form-group">
{{ form_row(form._token) }}
</div>
		<br><br>
		{{ form_end(form) }}
	</div>
{% endblock %}
