{% extends 'base.html.twig' %}

{% block title %} La liste d'allergènes' {% endblock %}

{% block body %}
<div class="container mt-4">
<h1>Les allergènes</h1>

<a href="{{ path('allergen.new') }} " class="btn btn-info">Créer un allergène</a>
{% for message in app.flashes('success') %}
<div class="alert alert-success">
{{ message }}
</div>
{%endfor %}
<table class="table table-hover">
<thead>
<tr>
<th scope="col">Numéro</th>
<th scope="col">Nom</th>
<th scope="col">Edition</th>
<th scope="col">Suppression</th>
</tr>
</thead>
<tbody>
{% for allergen in allergens %}
<tr class="table-primary">
<th scope="row">{{ allergen.id }}</th>
<td>{{ allergen.name }}</td>
<td><a href="{{ path('allergen.edit', {id: allergen.id}) }}" class="btn btn-danger">Modifier</a></td>
<td><a href="{{ path('allergen.delete', {id: allergen.id}) }}" class="btn btn-warning">Supprimer</a>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
{% endblock %}


