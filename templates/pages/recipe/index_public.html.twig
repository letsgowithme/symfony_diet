{% extends 'base.html.twig' %}
{% block title %}
	La liste de recettes
{% endblock %}
{% block body %}
	<div class="container mt-4">
		<h1>Recettes de base</h1>
		<div class="d-flex justify-content-center flex-wrap">
			{% for recipe in recipes %}
				<div class="card border-primary mb-3 me-3" style="max-width: 20rem;">
					<div class="card-header">Recette num√©ro
						{{ recipe.id }}</div>
					<div class="card-body">
						<h4 class="card-title">
						<a href="{{ path('recipe.show', {id: recipe.id}) }}">{{ recipe.name }}</a></h4>

						{# <div class="card-image recipe__image form-image">
                  {{ form_row(form.imageFile) }}</div> #}
						<p class="card-text">{{ recipe.description|slice(0, 100) ~ '...'  }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
