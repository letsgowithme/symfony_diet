{% extends 'base.html.twig' %}
{% block title %}
	Recettes publiques  
{% endblock %}

{% block body %}
	<div class="container mt-4 d-flex flex-sm-column justify-content-center">
		<h1 class="text-center text-light">Recettes de base</h1>
		<div class="d-flex justify-content-center flex-wrap">
			{% for recipe in recipes %}
			{% if recipe.isPublic is same as true %}
				<div class="card border-primary mb-3 me-3" style="width: 20rem;">
					<div class="card-header text-light">Recette num√©ro
						{{ recipe.id }}</div>
					<div class="card-body">
						<h4 class="card-title text-light">
						<a href="{{ path('recipe.show_public', {id: recipe.id}) }}" class="text-light">{{ recipe.name }}</a></h4>

						<div class="recipe__image card-image">
							<img style="max-width: 350px;" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
						</div>
						<p class="card-text" style=" color: #636161;">{{ recipe.description|slice(0, 100) ~ '...'  }}</p>
					</div>
				</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
